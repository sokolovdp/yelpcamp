<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add new Comment to <%= campground.name %> </h1>
        <div style="width: 40%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group"> 
                    <input class="form-control" type="text" name="comment[text]" placeholder="текст комментария">
                </div>
                <div class="form-group"> 
                    <button class="btn btn-lg btn-default btn-primary btn-block">Создать</button>
                </div>
                <p>
                <a  href="/campgrounds/<%= campground._id %>">Назад</a>
                </p>
            </form>
        </div>
    </div>
</div>

