<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create new campground:</h1>
        <div style="width: 40%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="campground name">
                </div>
                <div class="form-group"> 
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group"> 
                    <input class="form-control" type="text" name="descr" placeholder="comments">
                </div>
                <div class="form-group"> 
                    <button class="btn btn-lg btn-default btn-primary btn-block">Submit</button>
                </div>
                <p>
                <a  href="/campgrounds">Go back</a>
                </p>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>
